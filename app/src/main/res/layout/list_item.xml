<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@color/main_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height"
        android:layout_gravity="center_vertical" />

    <RelativeLayout
        android:id="@+id/parentTextLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/miwok_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/dummyTV"
            android:layout_marginLeft="16dp"
            android:textColor="@color/font_primary_color"
            android:textStyle="bold"
            tools:text="item1 MIWOK" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:id="@+id/dummyTV"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/english_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dummyTV"
            android:layout_marginLeft="16dp"
            android:textColor="@color/font_primary_color"
            tools:text="item one" />

        <ImageView
            android:id="@+id/playButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_play_arrow_white_24dp" />


    </RelativeLayout>


</LinearLayout>